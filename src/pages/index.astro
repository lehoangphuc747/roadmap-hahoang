---
import RoadmapLayout from "../layouts/RoadmapLayout.astro";
import Header from "../components/roadmap/Header.astro";
import ExamCard from "../components/roadmap/ExamCard.astro";
import Timeline from "../components/roadmap/Timeline.astro";
import { getRoadmapData } from "../data/roadmapData";

const events = getRoadmapData();
---

<RoadmapLayout title="Lộ Trình Ôn Thi TOPIK - Hà Hoàng">
	<main class="min-h-screen">
		<Header />
		<ExamCard />
		<Timeline events={events} />

		<!-- Footer -->
		<footer class="text-center py-8 text-slate-600 text-sm">
			<p>&copy; 2026 Phuc Lee x Ha Hoang. All rights reserved.</p>
		</footer>
	</main>
</RoadmapLayout>
